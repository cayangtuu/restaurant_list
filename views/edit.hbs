<h1 class="mb-1 restaurant-show-title">編輯餐廳 - {{restaurant.name}}</h1>
<div class="container border-1">
  <form action="/restaurants/{{restaurant._id}}/edit" method="POST">
    <div class="mb-3 form-group">
      <label for="name" class="form-label">中文店名<span class="text-danger">*</span></label>
      <input type="text" class="form-control" id="name" name="name" value="{{restaurant.name}}" required>
    </div>
    <div class="mb-3 form-group">
      <label for="name_en" class="form-label">英文店名<span class="text-danger">*</span></label>
      <input type="text" class="form-control" id="name_en" name="name_en" value="{{restaurant.name_en}}" required>
    </div>
    <div class="mb-3 form-group">
      <label for="category" class="form-label">類別<span class="text-danger">*</span></label>
      <input type="text" class="form-control" list="category-list" id="category" name="category"
        value="{{restaurant.category}}" required>
      <datalist id="category-list">
        {{#each categories}}
        <option value="{{this}}"></option>
        {{/each}}
      </datalist>
    </div>
    <div class="mb-3 form-group">
      <label for="image" class="form-label">圖片<span class="text-danger">*</span></label>
      <input type="text" class="form-control" id="image" name="image" value="{{restaurant.image}}" required>
    </div>
    <div class="mb-3 form-group">
      <label for="location" class="form-label">地址<span class="text-danger">*</span></label>
      <input type="text" class="form-control" id="location" name="location" value="{{restaurant.location}}" required>
    </div>
    <div class="mb-3 form-group">
      <label for="phone" class="form-label">電話<span class="text-danger">*</span></label>
      <input type="text" class="form-control" id="phone" name="phone" value="{{restaurant.phone}}" required>
    </div>
    <div class="mb-3 form-group">
      <label for="google_map" class="form-label">google地圖<span class="text-danger">*</span></label>
      <input type="text" class="form-control" id="google_map" name="google_map" value="{{restaurant.google_map}}"
        required>
    </div>
    <div class="mb-3 form-group">
      <label for="rating" class="form-label">評分<span class="text-danger">*</span></label>
      <input type="number" class="form-control" id="rating" name="rating" value="{{restaurant.rating}}" min="0" max="5"
        step="0.1" required>
    </div>
    <div class="mb-3 form-group">
      <label for="description" class="form-label">餐廳描述<span class="text-danger">*</span></label>
      <textarea class="form-control" name="description" id="description" cols="30" rows="5"
        required>{{restaurant.description}}</textarea>
    </div>
    <div class="d-flex justify-content-center flex-wrap mb-3">
      <button type="submit" class="btn btn-outline-primary mx-1">Submit</button>
      <a href="/" class="btn btn-outline-dark mx-1">Back</a>
    </div>
  </form>
</div>